{
  "version": "1.0",
  "passes": {
    "Image": {
      "inputs": {
        "iChannel0": {
          "type": "texture",
          "path": "./textures/noise.png",
          "filter": "linear",
          "wrap": "repeat"
        },
        "iChannel1": {
          "type": "buffer",
          "source": "BufferA"
        },
        "iChannel2": {
          "type": "keyboard"
        }
      }
    },
    "BufferA": {
      "path": "./buffers/buffer_a.glsl",
      "inputs": {
        "iChannel0": {
          "type": "texture",
          "path": "./textures/tile.jpg",
          "filter": "nearest",
          "wrap": "clamp"
        },
        "iChannel1": {
          "type": "buffer",
          "source": "BufferB"
        }
      }
    },
    "BufferB": {
      "path": "./buffers/buffer_b.glsl",
      "inputs": {
        "iChannel0": {
          "type": "keyboard"
        }
      }
    }
  }
}
