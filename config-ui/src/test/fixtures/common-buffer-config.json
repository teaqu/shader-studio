{
  "version": "1.0",
  "passes": {
    "Image": {
      "inputs": {
        "iChannel0": {
          "type": "texture",
          "path": "./textures/default.png",
          "filter": "linear",
          "wrap": "clamp"
        },
        "iChannel1": {
          "type": "texture",
          "path": "./textures/noise.png",
          "filter": "linear",
          "wrap": "repeat"
        }
      }
    },
    "common": {
      "path": "./common.glsl"
    },
    "BufferA": {
      "path": "./buffers/buffer_a.glsl",
      "inputs": {
        "iChannel0": {
          "type": "buffer",
          "source": "BufferA"
        },
        "iChannel1": {
          "type": "texture",
          "path": "./textures/tile.jpg",
          "filter": "nearest",
          "wrap": "clamp"
        }
      }
    }
  }
}
