{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Shader View Configuration",
  "description": "Configuration file for Shader View extension (.sv.json)",
  "type": "object",
  "required": ["version", "Image"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version"
    },
    "Image": {
      "$ref": "#/definitions/ImagePass"
    },
    "BufferA": {
      "$ref": "#/definitions/BufferPass"
    },
    "BufferB": {
      "$ref": "#/definitions/BufferPass"
    },
    "BufferC": {
      "$ref": "#/definitions/BufferPass"
    },
    "BufferD": {
      "$ref": "#/definitions/BufferPass"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "ImagePass": {
      "type": "object",
      "description": "Main image pass configuration",
      "properties": {
        "inputs": {
          "$ref": "#/definitions/PassInputs"
        }
      },
      "additionalProperties": false
    },
    "BufferPass": {
      "type": "object",
      "description": "Buffer pass configuration",
      "required": ["path"],
      "properties": {
        "path": {
          "type": "string",
          "description": "Path to the buffer GLSL file (relative or absolute)"
        },
        "inputs": {
          "$ref": "#/definitions/PassInputs"
        }
      },
      "additionalProperties": false
    },
    "PassInputs": {
      "type": "object",
      "description": "Input channels for a pass",
      "properties": {
        "iChannel0": {
          "$ref": "#/definitions/ConfigInput"
        },
        "iChannel1": {
          "$ref": "#/definitions/ConfigInput"
        },
        "iChannel2": {
          "$ref": "#/definitions/ConfigInput"
        },
        "iChannel3": {
          "$ref": "#/definitions/ConfigInput"
        }
      },
      "additionalProperties": false
    },
    "ConfigInput": {
      "type": "object",
      "required": ["type"],
      "oneOf": [
        {
          "type": "object",
          "required": ["type", "source"],
          "properties": {
            "type": {
              "const": "buffer"
            },
            "source": {
              "type": "string",
              "enum": ["BufferA", "BufferB", "BufferC", "BufferD"],
              "description": "Source buffer name"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "path"],
          "properties": {
            "type": {
              "const": "texture"
            },
            "path": {
              "type": "string",
              "description": "Path to texture file"
            },
            "filter": {
              "type": "string",
              "enum": ["linear", "nearest", "mipmap"],
              "description": "Texture filtering mode"
            },
            "wrap": {
              "type": "string",
              "enum": ["repeat", "clamp"],
              "description": "Texture wrap mode"
            },
            "vflip": {
              "type": "boolean",
              "description": "Whether to flip texture vertically"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "const": "keyboard"
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}
