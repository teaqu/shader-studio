  "Color RGB to HSL": {
    "prefix": "color-rgb2hsl",
    "body": [
      "vec3 rgb2hsl(vec3 c) {",
      "\tfloat cMin = min(min(c.r, c.g), c.b);",
      "\tfloat cMax = max(max(c.r, c.g), c.b);",
      "\tfloat delta = cMax - cMin;",
      "\tfloat l = (cMax + cMin) / 2.0;",
      "\tfloat s = 0.0;",
      "\tfloat h = 0.0;",
      "\tif (delta > 0.0) {",
      "\t\ts = (l < 0.5) ? delta / (cMax + cMin) : delta / (2.0 - cMax - cMin);",
      "\t\tif (c.r == cMax) h = (c.g - c.b) / delta;",
      "\t\telse if (c.g == cMax) h = 2.0 + (c.b - c.r) / delta;",
      "\t\telse h = 4.0 + (c.r - c.g) / delta;",
      "\t\th = fract(h / 6.0);",
      "\t}",
      "\treturn vec3(h, s, l);",
      "}"
    ],
    "description": "Convert RGB to HSL color space"
  },
  "Color HSL to RGB": {
    "prefix": "color-hsl2rgb",
