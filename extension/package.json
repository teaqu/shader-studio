{
  "name": "shadera",
  "displayName": "Shadera",
  "description": "GLSL shader viewer for shadertoy shaders",
  "version": "0.0.1",
  "publisher": "teaqu",
  "repository": {
    "type": "git",
    "url": "https://github.com/teaqu/shadera.git"
  },
  "homepage": "https://github.com/teaqu/shadera",
  "bugs": {
    "url": "https://github.com/teaqu/shadera/issues"
  },
  "license": "MIT",
  "icon": "assets/icon.png",
  "keywords": [
    "shader",
    "glsl",
    "webgl",
    "graphics",
    "shadertoy"
  ],
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shadera.view",
        "title": "Shadera: ShaderToy Panel"
      },
      {
        "command": "shadera.startWebServer",
        "title": "Shadera: Start Web Server"
      },
      {
        "command": "shadera.stopWebServer",
        "title": "Shadera: Stop Web Server"
      },
      {
        "command": "shadera.showWebServerMenu",
        "title": "Shadera: Web Server Menu"
      },
      {
        "command": "shadera.generateConfig",
        "title": "Shadera: Generate Config for GLSL File"
      },
      {
        "command": "shadera.toggleConfigView",
        "title": "Shadera: Toggle JSON/UI View"
      },
      {
        "command": "shadera.openInElectron",
        "title": "Shadera: Open Window"
      }
    ],
    "customEditors": [
      {
        "viewType": "shadera.configEditor",
        "displayName": "Shader Config Editor",
        "selector": [
          {
            "filenamePattern": "*.sha.json"
          }
        ],
        "priority": "option"
      }
    ],
    "configuration": {
      "title": "Shadera",
      "properties": {
        "shadera.webServerPort": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port number for the HTTP web server (default from monorepo config)"
        },
        "shadera.webSocketPort": {
          "type": "number",
          "default": 51472,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port number for the WebSocket server (default from monorepo config)"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "*.sha.json",
        "url": "./schemas/shader-config.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "npm run build:ui && npm run build:config-ui && npm run build:electron-app && webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "build": "npm run build:ui && npm run build:config-ui && npm run build:electron-app && tsc -p ./",
    "build:ui": "cd ../ui && npm run build && npm run copy-to-extension",
    "build:config-ui": "cd ../config-ui && npm run build && npm run copy-to-extension",
    "build:electron-app": "cd ../electron && npm run build && npm run copy-to-extension",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.101.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "sinon": "^21.0.0",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@electron/get": "^3.1.0",
    "@shadera/types": "*",
    "@types/yauzl": "^2.10.3",
    "ws": "^8.18.3",
    "yauzl": "^3.2.0"
  }
}
