{
  "name": "shader-view",
  "displayName": "shader-view",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shader-view.view",
        "title": "Shader View: ShaderToy Panel"
      },
      {
        "command": "shader-view.startWebServer",
        "title": "Shader View: Start Web Server"
      },
      {
        "command": "shader-view.stopWebServer",
        "title": "Shader View: Stop Web Server"
      },
      {
        "command": "shader-view.showWebServerMenu",
        "title": "Shader View: Web Server Menu"
      },
      {
        "command": "shader-view.generateConfig",
        "title": "Shader View: Generate Config for GLSL File"
      }
    ],
    "customEditors": [
      {
        "viewType": "shader-view.configEditor",
        "displayName": "Shader Config Editor",
        "selector": [
          {
            "filenamePattern": "*.sv.json"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Shader View",
      "properties": {
        "shaderView.webServerPort": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port number for the HTTP web server (default from monorepo config)"
        },
        "shaderView.webSocketPort": {
          "type": "number",
          "default": 51472,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port number for the WebSocket server (default from monorepo config)"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "*.sv.json",
        "url": "./schemas/shader-config.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.101.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "sinon": "^21.0.0"
  },
  "dependencies": {
    "@shader-view/types": "*",
    "jsonc-parser": "^3.3.1",
    "ws": "^8.18.3"
  }
}
