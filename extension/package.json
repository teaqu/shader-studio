{
  "name": "shader-studio",
  "displayName": "Shader Studio",
  "description": "GLSL shader viewer for shadertoy shaders",
  "version": "0.0.4",
  "publisher": "teaqu",
  "repository": {
    "type": "git",
    "url": "https://github.com/teaqu/shader-studio.git"
  },
  "homepage": "https://github.com/teaqu/shader-studio",
  "bugs": {
    "url": "https://github.com/teaqu/shader-studio/issues"
  },
  "license": "MIT",
  "icon": "assets/icon.png",
  "keywords": [
    "shader",
    "glsl",
    "webgl",
    "graphics",
    "shadertoy"
  ],
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shader-studio.view",
        "title": "Shader Studio: ShaderToy Panel"
      },
      {
        "command": "shader-studio.startWebServer",
        "title": "Shader Studio: Start Web Server"
      },
      {
        "command": "shader-studio.stopWebServer",
        "title": "Shader Studio: Stop Web Server"
      },
      {
        "command": "shader-studio.showWebServerMenu",
        "title": "Shader Studio: Web Server Menu"
      },
      {
        "command": "shader-studio.generateConfig",
        "title": "Shader Studio: Generate Config for GLSL File"
      },
      {
        "command": "shader-studio.toggleConfigView",
        "title": "Open Preview to the Side",
        "icon": "$(open-preview)"
      },
      {
        "command": "shader-studio.toggleConfigViewToSource",
        "title": "Show Source",
        "icon": "$(go-to-file)"
      },
      {
        "command": "shader-studio.openInElectron",
        "title": "Shader Studio: Open Window"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "shader-studio.toggleConfigView",
          "when": "resourceFilename =~ /.*\\.sha\\.json$/ && !activeCustomEditorId",
          "group": "navigation@1"
        },
        {
          "command": "shader-studio.toggleConfigViewToSource",
          "when": "activeCustomEditorId == shader-studio.configEditor",
          "group": "navigation@1"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "shader-studio.configEditor",
        "displayName": "Shader Config Editor",
        "selector": [
          {
            "filenamePattern": "*.sha.json"
          }
        ],
        "priority": "option"
      }
    ],
    "configuration": {
      "title": "Shader Studio",
      "properties": {
        "shader-studio.webServerPort": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port number for the HTTP web server"
        },
        "shader-studio.webSocketPort": {
          "type": "number",
          "default": 51472,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port number for the WebSocket server (requires restart)"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "*.sha.json",
        "url": "./schemas/shader-config.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "npm run build:ui && npm run build:config-ui && npm run build:electron-app && webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "build": "npm run build:ui && npm run build:config-ui && npm run build:electron-app && tsc -p ./",
    "build:ui": "cd ../ui && npm run build && npm run copy-to-extension",
    "build:config-ui": "cd ../config-ui && npm run build && npm run copy-to-extension",
    "build:electron-app": "cd ../electron && npm run build && npm run copy-to-extension",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.101.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "sinon": "^21.0.0",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@electron/get": "^3.1.0",
    "@shader-studio/types": "*",
    "@shader-studio/utils": "*",
    "@types/yauzl": "^2.10.3",
    "ws": "^8.18.3",
    "yauzl": "^3.2.0"
  }
}